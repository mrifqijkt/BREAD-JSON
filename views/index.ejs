            <% data.forEach((item, index) => { %>
        </tr>
        <td>
            <%= index + 1%>
        <td>
            <%= item.nama %>
        </td>
        <td>
            <%= item.alamat %>
        </td>
        <th><a href="/ubah/<%= index %>">ubah</a> &nbsp; <a href="/hapus/<%= index %>">hapus</a></th>
        <tr>
            <% }) %>
    </table>
</body>

</html>